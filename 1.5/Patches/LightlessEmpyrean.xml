<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>pphhyy's Lightless Empyrean</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="pphhyy_Apokryphos_Pawn"]/apparelRequired</xpath>
                    <value>
                        <apparelRequired>
                            <li>Apparel_EtherealHood</li>
                            <li>Apparel_EtherealRobes</li>
                          </apparelRequired>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>