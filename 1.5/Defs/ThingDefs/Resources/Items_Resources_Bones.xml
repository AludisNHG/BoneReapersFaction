<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>pphhyy_HumanBones</defName>
    <label>human bone</label>
    <description>Harvested human bones.</description>
    <graphicData>
      <texPath>Resources/Bones/HumanBones</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
    <stuffProps>
      <categories>
        <li>Stony</li>
      </categories>
      <color>(217, 196, 169)</color>
    </stuffProps>
    <statBases>
      <MarketValue>1</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.4</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>75</stackLimit>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>

  <RecipeDef>
    <defName>pphhyy_HarvestHumanBones</defName>
    <label>harvest human bones</label>
    <description>Harvest human bones.</description>
    <jobString>Harvesting.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <interruptIfIngredientIsRotting>true</interruptIfIngredientIsRotting>
    <uiIconThing>pphhyy_HumanBones</uiIconThing>
	  <recipeUsers>
        <li>pphhyy_BoneTitheNexus</li>
	  </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>CorpsesHumanlike</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    <disallowedCategories>
        <li>CorpsesMechanoid</li>
		    <li>CorpsesAnimal</li>
		    <li>CorpsesInsect</li>
    </disallowedCategories>
    <specialFiltersToDisallow>
        <li>AllowRotten</li>
    </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    </defaultIngredientFilter>
	<!-- <specialProducts>
      <li>Butchery</li>
    </specialProducts> -->
	<products>
		  <pphhyy_HumanBones>30</pphhyy_HumanBones>
	</products>
  <researchPrerequisite>pphhyy_BoneReaperTech</researchPrerequisite>
  </RecipeDef>

