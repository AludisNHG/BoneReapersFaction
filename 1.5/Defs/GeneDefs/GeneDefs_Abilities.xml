<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<GeneDef>
		<defName>pphhyy_BoneReaper_Flight</defName>
		<label>bone reaper flight</label>
		<description>Carriers of this gene have skeletal wings that provide flight.</description>
		<iconPath>Icons/XenotypeIcons/ArchonJump</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<displayCategory>Ability</displayCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>
		<exclusionTags>
			<li>Flight</li>
		</exclusionTags>
		<renderNodeProperties>
			<li>
				<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
				<texPath>Pawns/Wings/ArchonWings</texPath>
				<colorType>Custom</colorType>
				<overrideMeshSize>(2, 2)</overrideMeshSize>
				<parentTagDef>Body</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<defaultData>
						<layer>-2</layer>
					</defaultData>
					<dataNorth>
						<offset>(0, 0.2, 0.2)</offset>
						<layer>90</layer>
					</dataNorth>
					<dataSouth>
						<offset>(0, -0.2, 0.3)</offset>
					</dataSouth>
					<dataEast>
						<offset>(-0.3, 0.3, 0.3)</offset>
						<layer>90</layer>
					</dataEast>
					<dataWest>
						<offset>(0.3, 0.3, 0.3)</offset>
						<layer>90</layer>
					</dataWest>
				</drawData>
			</li>
		</renderNodeProperties>
		<abilities>
			<li>pphhyy_BoneReaperAbility_Flight</li>
		</abilities>
		<descriptionHyperlinks>
			<AbilityDef>pphhyy_BoneReaperAbility_Flight</AbilityDef>
		</descriptionHyperlinks>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<backgroundPathEndogenes>Icons/XenotypeIcons/BoneReapersGeneBackground_Endogene</backgroundPathEndogenes>
				<backgroundPathXenogenes>Icons/XenotypeIcons/BoneReapersGeneBackground_Xenogene</backgroundPathXenogenes>
			</li>
		</modExtensions>
	</GeneDef>

</Defs>	